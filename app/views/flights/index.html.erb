
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h1 class="title text-center">
          Simple Flight Booker
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h2 class="subtitle text-center">
          Book your <i>dream get-away</i> today!
        </h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <%= render 'search_form' %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 text-center">

        <% unless @available_flights.nil? %>
          <% if @available_flights.any? %>
            <%= render 'search_results' %>
          <% else %>
            <br />
            <p>Sorry! We were unable to find any flights with the given input.</p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
